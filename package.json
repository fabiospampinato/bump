{
  "name": "@fabiospampinato/bump",
  "repository": "github:fabiospampinato/bump",
  "description": "Bump updates the project's version, updates/creates the changelog, makes the bump commit, tags the bump commit and makes the release to GitHub. Opinionated but configurable.",
  "version": "3.2.2",
  "type": "module",
  "bin": "dist/bin.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "tsex clean",
    "compile": "tsex compile",
    "compile:watch": "tsex compile --watch",
    "prepublishOnly": "tsex prepare"
  },
  "keywords": [
    "bump",
    "automation",
    "version",
    "changelog",
    "commit",
    "tag",
    "release"
  ],
  "dependencies": {
    "find-up-json": "^2.0.2",
    "plain-object-merge": "^2.0.1",
    "prask": "^2.1.0",
    "promise-resolve-timeout": "^2.0.0",
    "specialist": "^1.3.0",
    "tiny-colors": "^2.1.2",
    "tiny-open": "^1.0.0",
    "tiny-readdir": "^2.2.0",
    "tiny-spinner": "^2.0.3",
    "zeptomatch": "^1.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "tsex": "^3.0.1",
    "typescript": "^5.2.2"
  }
}
